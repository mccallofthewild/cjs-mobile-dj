.container-fluid
  =render 'nav'
  .row
    .col-xs-12
  .row
    -@posts.each do |post|
      .col-xs-12.col-md-3
        %h3= post.title
        %h3
          %small= post.subtitle
        %p= post.author
        %p.fr-view!=post.body.truncate_words(28)
        = link_to 'Show', blog_post_path(post.pathname)
        = link_to 'Edit', edit_post_path(post)
        = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Post', new_post_path
