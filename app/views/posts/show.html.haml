<link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
.container-fluid
  .row
    .banner
      =image_tag "https://hd.unsplash.com/photo-1468971050039-be99497410af", class:"banner-image"
    .col-xs-12.col-md-8.col-md-offset-2
      %p{id:"notice"}=notice
      %h1= @post.title
      .h2= @post.subtitle
      %p!="by <em>#{@post.author}</em>"
      %p.fr-view!= @post.body
      =link_to 'Edit', edit_post_path(@post)
      =link_to 'Back', posts_path
