<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

.container-fluid{'ng-controller':'WeddingsController as wc'}
	.row.background-5.bg
		.dark-row
			.container-fluid
				.row.nav-row
					.col-sm-1.col-xs-0
					.col-sm-5.col-xs-12.text-left
						%a{href:"#{root_path}"}
							.h1 
								=image_tag "heart-logo-square.svg", fill:'pink', style:"max-height:1em; max-width:1em;", class:"logo-image"
								%span 
									CJ's Mobile DJ
					.col-sm-4.text-right
						%div.h1 <i class="material-icons">place</i> Boise, Idaho
					.col-sm-2.col-xs-12
						%a.bttn.open-bttn.nav-bttn{'ng-click':'wc.toggleProp("action"); ac.sendEventData("cta-btn-0", "click", wc.action)', "ng-show":"!wc.action"} GET A QUOTE
						%a.bttn.open-bttn.nav-bttn{'ng-click':'wc.toggleProp("action");', "ng-show":"wc.action"} EXIT

					.col-md-1.col-xs-0
			.col-xs-0.col-md-2
			.col-xs-12.col-md-8
				.flex-area
					.h2.real-text.animated.fadeIn The soundtrack to your happily ever after
					.text-area-wrap
						-# %span.text-area.text-area-main#text-area
					%a.bttn.open-bttn.animated.fadeIn.cta-bttn{'ng-click':'wc.toggleProp("action"); ac.sendEventData("cta-btn-1", "click")', style:"margin-bottom:-15%"} LET'S DANCE!
			.col-xs-12.col-md-2
	.row.background-3.text-section-container.bg
		.h3
			Your Checklist Just Got Shorter
			%i.fa.fa-check
			%br
		.second-row
			.col-xs-12.col-md-10.col-md-offset-1
				.row
					.col-xs-12.col-md-3
						-# =image_tag 'perfect-fit.svg', class:'action-icon'
						.h3 We listen.
					.col-xs-12.col-md-3
						-# =image_tag 'speaker.svg', class:'action-icon'
						.h3 We prep it.
					.col-xs-12.col-md-3
						-# =image_tag 'mic.svg', class:'action-icon'
						.h3 We do it.
					.col-xs-12.col-md-3
						-# =image_tag 'mic.svg', class:'action-icon'
						.h3 You dance.
				.row
					.col-md-4.col-md-offset-4
						%a
							.bttn.open-bttn.animated.fadeIn.cta-bttn.in-block-cta-btn{'ng-click':'wc.toggleProp("action"); ac.sendEventData("cta-btn-2", "click")'}  SIGN ME UP!
		.row.second-row
	.row.background-7.text-section-container.bg
		.second-row.dark-row.content-container
			.col-md-4.col-md-offset-4
				.nested-text
					-# .h3 
					.h3.text-left We bring the music.
					.h3.text-left You bring the party.
			.col-xs-0.col-md-7
	.row.background-3.text-section-container
		.row.second-row
			.col-xs-12.col-md-10.col-md-offset-1
				-# =image_tag 'speaker.svg', class:'action-icon'
				.h3 You've waited your entire life for this day.
				.h3 Don't leave your wedding's entertainment to chance.
				-# =image_tag 'mic.svg', class:'action-icon'
				%br
				%br
				%a.bttn.open-bttn.animated.fadeIn.cta-bttn.in-block-cta-btn{'ng-click':'wc.toggleProp("action"); ac.sendEventData("cta-btn-3", "click")'}  LEAVE IT TO US
	.row
		.background-8.text-section-container.bg
			.dark-row.flex-col.space-around
				.col-xs-12.col-md-10.col-md-offset-1
					.col-xs-12.col-md-4
						-# =image_tag 'speaker.svg', class:'action-icon'
						.h1
							%i.fa.fa-smile-o.fa-lg
						.stat-item
							%span 3,457
						.stat-item
							%span Total Smiles
					.col-xs-12.col-md-4
						-# =image_tag 'speaker.svg', class:'action-icon'
						.h1
							%i.fa.fa-child.fa-lg
						.stat-item
							%span 238
						.stat-item
							%span Bad Dance Moves
					.col-xs-12.col-md-4
						-# =image_tag 'speaker.svg', class:'action-icon'
						.h1
							%i.fa.fa-heartbeat.fa-lg
						.stat-item
							%span 87
						.stat-item
							%span LOL Memories
	.row.background-3.text-section-container
		.col-xs-12.col-md-10.col-md-offset-1
			.h2.bold How it works
			%br
			.col-md-9.col-md-offset-2
				%ol
					%li Tell us your vision
					%li We'll create a plan to make it happen
					%li Create a lifetime of memories in one night
					%br
					%br
			%br
			%br
			%br
			.reviews-container
